@model IEnumerable<gurleenProject.Models.StoreExpense>

@{
    ViewData["Title"] = "LOG Employee Expenses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="tblExpenses">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalExpense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalExpense)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExpenseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExpenseId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExpenseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



